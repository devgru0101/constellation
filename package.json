    "@tanstack/react-query": "^5.17.19",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
