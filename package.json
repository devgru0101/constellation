{
  "name": "constellation-ide",
  "version": "0.1.0",
  "description": "AI-Powered IDE Application built on CodeSandbox with Encore.ts integration",
  "main": "src/index.tsx",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
